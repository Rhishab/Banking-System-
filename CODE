class Ribosome:
    def __init__(self,Name, ProteinTypes, RnaTypes):
        self.Name = Name
        self.ProteinTypes = ProteinTypes
        self.RnaTypes =RnaTypes
    
    def func(self) :
        print("Ribosomme Name " + self.Name)
        print("Protein Type:" + self.ProteinTypes)
        print("RnaTypes:" + self.RnaTypes)
        
        
def RibosommeData():
